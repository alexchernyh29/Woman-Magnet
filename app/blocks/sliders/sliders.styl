.sliders__wrap__list .slick-slide.slick-current .sliders__list__card-img{
    width w(350)
    height w(315)
    position absolute
    top w(-10)
    padding-left w(30)
}
@media (max-width:768px) {
    .sliders__wrap__list .slick-slide.slick-current .sliders__list__card-title {
        color: #fff;
        text-align: left;
        padding-top 64%
        padding-left 10%
        margin-top 0
        font-size wm(30)
        line-height wm(30)
    }

    .sliders__wrap__list .slick-slide.slick-current .sliders__list__card-img{
        width wm(190)
        height wm(170)
        position absolute
        top wm(-10)
        left wm(20)
    }

    .sliders__wrap__list .slick-slide.slick-current .sliders__list__card-subtitle {
        color #fff
        text-align right
        padding-right 10%
        font-size wm(27)
        line-height wm(35)
    }

    .sliders__wrap__list .slick-slide.slick-current {
        transition 0.2s
    }
}

.sliders__wrap__list .slick-slide.slick-current .sliders__list__card-vector {
    display block
}

.disabled{
    display: none;    
}