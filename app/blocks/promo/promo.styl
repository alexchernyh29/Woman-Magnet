.promo__wrap__list .slick-slide.slick-active .promo__list__card-img{
    width w(350)
    height w(315)
    position absolute
    top w(-10)
    padding-left w(50)
}
@media (max-width:768px) {
    .promo__wrap__list .slick-slide.slick-active .promo__list__card-title {
        color: #fff;
        text-align: left;
        padding-top 61%
        padding-left 10%
        margin-top 0
        font-size wm(40)
        line-height wm(40)
    }

    .promo__wrap__list .slick-slide.slick-active .promo__list__card-img{
        width wm(190)
        height wm(170)
        position absolute
        top wm(-10)
        left wm(20)
    }

    .promo__wrap__list .slick-slide.slick-active .promo__list__card-subtitle {
        color #fff
        text-align right
        padding-right 10%
        font-size wm(30)
        line-height wm(35)
    }

    .promo__wrap__list .slick-slide.slick-active{
        transition 0.2s
    }
}

.promo__wrap__list .slick-slide.slick-active .promo__list__card-vector {
    display block
}

.disabled{
    display: none;    
}